.SideBar
  .SideBar__info
    .SideBar__info__items
      .SideBar__info__items__name
        =current_user.name
      %ul.SideBar__info__items__icons
        %li.icon-edit
        = link_to new_group_path  do
          =icon("fas" , "edit")
        %li.icon-cog
        = link_to edit_user_path(current_user) do
          =icon("fas" , "cog")
  
  .SideBar__groups__list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group-name
            = group.name
          .group-message
            = group.show_last_message